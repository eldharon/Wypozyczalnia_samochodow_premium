@model IEnumerable<WypożyczalniaSamochodówPremium.Models.Samochod>
@using WypożyczalniaSamochodówPremium.Helpers;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container mt-5">
    <div id="shortcode16">
        <div class="shortcode-html">
            <div class="row g-mb-70">

                @foreach (var item in Model)
                {

                    <div class="col-md-4 g-mb-30">
                        <div class="u-shadow-v11 text-center">
                            <div class="g-bg-white g-pa-20">
                                <div class="mb-3">
                                    <img src="/Adm/Samochod/ShowPhoto/@item.PhotoId"  alt="Zdjęcie główne" style="height:80%;width:80%" />
                                </div>
                                <div class="mb-3">
                                    <h3 class="h5"><a class="g-color-black" href="#">@item.Marka @item.Model</a></h3>
                                    <span class="d-block g-color-gray-dark-v5 g-font-size-13 mb-1">@item.Wersja</span>
                                </div>
                                <span class="d-block g-font-weight-500 g-font-size-13"><i class="fa fa-cogs"></i> skrzynia @item.SkrzyniaBiegow</span>
                                <span class="d-block g-font-weight-500 g-font-size-13"><i class="fa fa-car"></i> @item.LiczbaDrzwi</span>
                            </div>
                            <a class="btn btn-block u-btn-primary g-color-white--hover g-bg-secondary-dark-light-v1--hover g-font-weight-600 g-font-size-12 text-uppercase rounded-0 g-px-25 g-py-15" href="/Cars/RentCar/@item.SamochodId">
                                Zarezerwuj!
                            </a>
                            <a class="btn btn-block g-color-black g-bg-white g-bg-secondary--hover g-font-weight-600 g-font-size-12 text-uppercase rounded-0 g-px-25 g-py-15 mt-0" href="/Cars/Details/@item.SamochodId">Więcej</a>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</div>
    