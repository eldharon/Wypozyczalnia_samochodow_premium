@model WypożyczalniaSamochodówPremium.Models.Samochod
@using WypożyczalniaSamochodówPremium.Helpers;


<style>
    /* Make the image fully responsive */
    .carousel-inner img {
        width: 100%;
        height: 100%;
    }
</style>

<div class="container mt-5 mb-5">

    <div class="mb-5">
        @Html.IconActionLink("fa fa-arrow-left","Powrót","Index","Cars",null,new { @class="btn btn-primary"})
    </div>

    <div class="row">
        <div class="col-md-3">
            <!-- Nav tabs -->
            <ul class="nav text-center flex-column u-nav-v1-1" role="tablist" data-target="nav-1-1-accordion-default-ver-big-icons" data-tabs-mobile-type="accordion" data-btn-classes="btn btn-md btn-block rounded-0 u-btn-outline-lightgray g-mb-20">
                <li class="nav-item g-mb-20--md">
                    <a class="nav-link active" data-toggle="tab" href="#nav-1-1-accordion-default-ver-big-icons--1" role="tab">
                        <i class="icon-info d-block g-font-size-25 u-tab-line-icon-pro"></i>
                        Głowne informacje
                    </a>
                </li>
                <li class="nav-item g-mb-20--md">
                    <a class="nav-link" data-toggle="tab" href="#nav-1-1-accordion-default-ver-big-icons--2" role="tab">
                        <i class="icon-menu d-block g-font-size-25 u-tab-line-icon-pro"></i>
                        Opis
                    </a>
                </li>
                <li class="nav-item g-mb-20--md">
                    <a class="nav-link" data-toggle="tab" href="#nav-1-1-accordion-default-ver-big-icons--3" role="tab">
                        <i class="icon-communication-017 d-block g-font-size-25 u-tab-line-icon-pro"></i>
                        Galeria
                    </a>
                </li>
            </ul>
            <!-- End Nav tabs -->
        </div>

        <div class="col-md-9">
            <!-- Tab panes -->
            <div id="nav-1-1-accordion-default-ver-big-icons" class="tab-content">
                <div class="tab-pane fade show active" id="nav-1-1-accordion-default-ver-big-icons--1" role="tabpanel">
                    <div>
                        <div class="form-group row ">
                            @Html.LabelFor(model => model.Marka, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Marka)
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Model, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Model)
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Wersja, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Wersja)

                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.RokProdukcji, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.RokProdukcji)
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.RodzajSilnika, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.RodzajSilnika)
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.PojemnoscSilnika, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.PojemnoscSilnika)
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.SkrzyniaBiegow, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.SkrzyniaBiegow)
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.LiczbaDrzwi, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.LiczbaDrzwi)
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Kolor, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Kolor)
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Przebieg, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Przebieg)
                            </div>
                        </div>
                    </div>
                </div>

                <div class="tab-pane fade" id="nav-1-1-accordion-default-ver-big-icons--2" role="tabpanel">

                    @{
                        if (Model.opisy.Count() > 0)
                        {
                            foreach (var item in Model.opisy)
                            {
                                <div class="form-group row">
                                    <div class="control-label col-md-2 font-weight-bold">
                                        Opis ogólny
                                    </div>
                                    <div class="col-md-6">
                                        @item.OpisOgolny
                                    </div>
                                </div>

                                <div class="form-group row">
                                    <div class="control-label col-md-2 font-weight-bold">
                                        Wyposażenie
                                    </div>
                                    <div class="col-md-6">
                                        @item.Wyposazenie
                                    </div>
                                </div>

                            }
                        }
                        else
                        {
                            <div class="form-group row col-md-10">
                                brak szczegółowych informacji...
                            </div>
                        }

                    }
                </div>

                <div class="tab-pane fade" id="nav-1-1-accordion-default-ver-big-icons--3" role="tabpanel" >
                    @{
                        var count = 0;
                        var count2 = 0;
                        if (Model.photos.Count() > 0)
                        {
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    @foreach (var item in Model.photos.Skip(1))
                                    {
                                        if (count == 0)
                                        {
                                            <li data-target="#demo" data-slide-to="@count" class="active"></li>
                                        }
                                        else
                                        {
                                            <li data-target="#demo" data-slide-to="@count"></li>
                                        }
                                        count++;
                                    }
                                </ol>
                                <!-- The slideshow -->
                                <div class="carousel-inner">
                                    @foreach (var item in Model.photos.Skip(1))
                                    {
                                        if (count2 == 0)
                                        {
                                            <div class="carousel-item active">
                                                <img style="width:800px;height:400px" src="/Adm/Samochod/ShowPhoto/@item.ImageId" alt="@Model.Model">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img style="width:800px;height:400px" src="/Adm/Samochod/ShowPhoto/@item.ImageId" alt="@Model.Model">
                                            </div>
                                        }
                                        count2++;
                                    }
                                </div>

                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>

                        }
                        else
                        {
                            <p>brak zdjęć dla tego auta...</p>
                        }
                    }
                </div>

            </div>
            <!-- End Tab panes -->
        </div>
    </div>


</div>