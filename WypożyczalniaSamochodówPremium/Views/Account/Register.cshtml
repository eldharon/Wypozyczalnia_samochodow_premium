@model WypożyczalniaSamochodówPremium.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutScript.cshtml";

}


    <section class="container g-py-100">
        <div class="row justify-content-center">
            <div class="col-sm-10 col-md-9 col-lg-6">
                <div class="g-brd-around g-brd-gray-light-v2 rounded g-py-40 g-px-30">
                    <header class="text-center mb-4">
                        <h2 class="h2 g-color-black g-font-weight-600">Zarejestruj</h2>
                    </header>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <!-- Form -->
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                    <form class="g-py-15">

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Imie, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                            @Html.TextBoxFor(m => m.Imie, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v2 g-brd-primary--hover rounded g-py-15 g-px-15" })

                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Nazwisko, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                            @Html.TextBoxFor(m => m.Nazwisko, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v2 g-brd-primary--hover rounded g-py-15 g-px-15" })

                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.DataUrodzenia, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                            @Html.EditorFor(m => m.DataUrodzenia, new { htmlAttributes = new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v2 g-brd-primary--hover rounded g-py-15 g-px-15" }})

                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Email, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v2 g-brd-primary--hover rounded g-py-15 g-px-15" })

                        </div>

                        <div class="row">
                            <div class="col-xs-12 col-sm-6 mb-4">
                                @Html.LabelFor(m => m.Password, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                                @Html.PasswordFor(m => m.Password, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v2 g-brd-primary--hover rounded g-py-15 g-px-15" })
                            </div>

                            <div class="col-xs-12 col-sm-6 mb-4">
                                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "g-color-gray-dark-v2 g-font-weight-600 g-font-size-13" })
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control g-color-black g-bg-white g-bg-white--focus g-brd-gray-light-v2 g-brd-primary--hover rounded g-py-15 g-px-15" })
                            </div>
                        </div>

                        <div class="row justify-content-between mb-5">
                            <div class="col-8 align-self-center">
                            </div>
                            <div class="col-4 align-self-center text-right">
                                <input type="submit" class="btn btn-md u-btn-primary rounded g-py-13 g-px-25" value="Zarejestruj" />
                            </div>
                        </div>
                    </form>
                    }
                    <!-- End Form -->

                    <footer class="text-center"></footer>
                </div>
            </div>
        </div>
    </section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
