@model WypożyczalniaSamochodówPremium.Models.IndexViewModel
@using WypożyczalniaSamochodówPremium.Helpers

@{
    ViewBag.Title = "Manage";
}


<div class="container mt-5 mb-5">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">

                    <div class="form-group row">
                        <div class="control-label col-md-2 font-weight-bold">
                            Twoje dane
                        </div>
                        <div class="col-md-6">
                            @Html.ActionLink("Pokaż", "PersonDetails", "Manage", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="control-label col-md-2 font-weight-bold">
                            Twoje wypożyczenia
                        </div>
                        <div class="col-md-6">
                            @Html.ActionLink("Pokaż", "RentList", "Rent", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="control-label col-md-2 font-weight-bold">
                            Zmień hasło
                        </div>
                        <div class="col-md-6">
                            @Html.ActionLink("Zmień", "ChangePassword", "Manage", null, new { @class = "btn btn-primary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


