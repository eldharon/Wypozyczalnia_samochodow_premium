@model WypożyczalniaSamochodówPremium.Models.Osoba
@using WypożyczalniaSamochodówPremium.Helpers
@{
    ViewBag.Title = "Osoba";
    Layout = "~/Views/Shared/_LayoutScript.cshtml";
}


<div class="container mt-5">
    <div class="mb-5">
        @Html.IconActionLink("fa fa-arrow-left", "Powrót", "Index", "Manage", null, new { @class = "btn btn-primary" })
    </div>
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    @Html.ValidationSummary(true)
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                        <div class="form-group row">
                            @Html.LabelFor(model => model.Imie, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Imie, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Nazwisko, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Nazwisko, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Adres, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.KodPocztowy, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.KodPocztowy, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Kraj, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Kraj, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.Miasto, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.Miasto, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group row">
                            @Html.LabelFor(model => model.NrTelefonu, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-6">
                                @Html.DisplayFor(model => model.NrTelefonu, new { @class = "form-control" })
                            </div>
                        </div>




                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Zmień", "UpdatePersonDetails", "Manage", new { @class = "btn btn-primary" }) &nbsp;
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>