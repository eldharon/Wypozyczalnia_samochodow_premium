@model IEnumerable<WypożyczalniaSamochodówPremium.Models.Wypozyczenie>
@using WypożyczalniaSamochodówPremium.Helpers;
@{
    ViewBag.Title = "Samochody";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}


@if (TempData["okMessage"] != null)
{
    Html.RenderPartial("MessageOKControl");
}

@if (TempData["warningMessage"] != null)
{
    Html.RenderPartial("MessageWarningControl");
}

@if (TempData["errorMessage"] != null)
{
    Html.RenderPartial("MessageErrorControl");
}



<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-road"></i> Wypozyczenie
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-responsive-sm">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataWypozyczenia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataZwrotu)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CzyDostarczany)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.CzyKierowca)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.AdresDojazdu)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Status)
                                    </th>

                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Akcja
                                        </button>
                                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 35px, 0px); top: 0px; left: 0px; will-change: transform;">
                                            @Html.IconActionLink("fa fa-edit", "Edytuj", "Edit", "Wypozyczenie", new { id = item.WypozyczenieId }, new { @class = "dropdown-item" })
                                            @Html.IconActionLink("fa fa-list-ol", "Szczegóły", "Details", "Wypozyczenie", new { id = item.WypozyczenieId }, new { @class = "dropdown-item" })
                                            @*@Html.IconActionLink("fa fa-trash", "Usuń", "Delete", "Wypozyczenie", new { id = item.WypozyczenieId }, new { @class = "dropdown-item" })*@
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @item.DataWypozyczenia
                                </td>
                                <td>
                                    @item.DataZwrotu
                                </td>
                                <td>
                                    @{ 
                                        if(item.CzyDostarczany == false)
                                        {
                                            <p>NIE</p>
                                        }
                                        else
                                        {
                                            <p>TAK</p>
                                        }
                                    }
                                </td>
                                <td>
                                    @{
                                        if (item.CzyKierowca == false)
                                        {
                                            <p>NIE</p>
                                        }
                                        else
                                        {
                                            <p>TAK</p>
                                        }
                                    }
                                </td>
                                <td>
                                    @item.AdresDojazdu
                                </td>
                                <td>
                                    @{
                                        if (item.Status == "nowe")
                                        {
                                            <i class="fa fa-circle" style="color:blue"></i> @item.Status

                                        }
                                        else if (item.Status == "w realizacji")
                                        {
                                            <i class="fa fa-circle" style="color:yellow"></i> @item.Status

                                        }
                                        else if (item.Status == "zrealizowane")
                                        {
                                            <i class="fa fa-circle" style="color:green"></i> @item.Status

                                        }
                                        else if (item.Status == "anulowane")
                                        {
                                            <i class="fa fa-circle" style="color:red"></i> @item.Status

                                        }
                                        else
                                        {
                                            <i class="fa fa-exclamation-triangle" style="color:orange"></i>
                                        }
                                    }

                                </td>


                            </tr>

                            }
                        </table>


                    </div>
                    <div class="card-footer">
                      
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

