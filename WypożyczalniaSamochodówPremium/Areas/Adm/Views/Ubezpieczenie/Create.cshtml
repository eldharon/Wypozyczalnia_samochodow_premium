@model WypożyczalniaSamochodówPremium.Models.Ubezpieczenie
@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-tools"></i> Dodaj Ubezpieczenie
                </div>
                @{Html.EnableClientValidation();}
                @using (Html.BeginForm())
                {
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <h4>Ubezpieczenie</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row form-group line">
                            @Html.LabelFor(model => model.NumerPolisy, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NumerPolisy, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.NumerPolisy)
                            </div>
                        </div>

                        <div class="row form-group line">
                            @Html.LabelFor(model => model.WazneOd, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.WazneOd, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.WazneOd)
                            </div>
                        </div>

                        <div class="row form-group line">
                            @Html.LabelFor(model => model.WazneDo, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.WazneDo, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.WazneDo)
                            </div>
                        </div>


                        @Html.HiddenFor(model => model.SamochodId)
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Dodaj" class="btn btn-primary" /> &nbsp; @Html.ActionLink("Wróć do listy", "ShowUbezpieczeniaForSamochod", new { id = Model.SamochodId }, new { @class = "btn btn-secondary" })
                    </div>

                }

            </div>
        </div>
    </div>
</div>