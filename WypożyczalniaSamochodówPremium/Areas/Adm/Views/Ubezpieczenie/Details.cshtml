@model WypożyczalniaSamochodówPremium.Models.Ubezpieczenie
@using WypożyczalniaSamochodówPremium.Helpers;
@{
    ViewBag.Title = "Serwis";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}


@if (TempData["okMessage"] != null)
{
    Html.RenderPartial("MessageOKControl");
}

@if (TempData["warningMessage"] != null)
{
    Html.RenderPartial("MessageWarningControl");
}

@if (TempData["errorMessage"] != null)
{
    Html.RenderPartial("MessageErrorControl");
}

<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-male"></i> Szczegóły
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            <h4>Ubezpieczenie</h4>
                            <hr>
                            <hr />
                            <div class="row form-group line">
                                @Html.LabelFor(model => model.NumerPolisy, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.NumerPolisy)
                                </div>
                            </div>

                            <div class="row form-group line">
                                @Html.LabelFor(model => model.WazneOd, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.WazneOd)
                                </div>
                            </div>

                            <div class="row form-group line">
                                @Html.LabelFor(model => model.WazneDo, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.WazneDo)
                                </div>
                            </div>

                            <div class="row form-group line">

                            </div>
                        </div>
                        <div class="card-footer">
                            @Html.ActionLink("Wróć do listy", "ShowUbezpieczeniaForSamochod", new { id = Model.SamochodId }, new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
