@model WypożyczalniaSamochodówPremium.Models.Wydarzenie
@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-event"></i> Dodaj wydarzenie
                </div>
                @{Html.EnableClientValidation();}
                @using (Html.BeginForm())
                {
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <h4>Wydarzenie</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row form-group line">
                            @Html.LabelFor(model => model.NazwaWydarzenia, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.NazwaWydarzenia, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.NazwaWydarzenia)
                            </div>
                        </div>

                        <div class="row form-group line">
                            @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Opis, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.Opis)
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Dodaj" class="btn btn-primary" /> &nbsp; @Html.ActionLink("Wróć do listy", "Index", null, new { @class = "btn btn-secondary" })
                    </div>

                }

            </div>
        </div>
    </div>
</div>