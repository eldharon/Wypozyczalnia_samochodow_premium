@model WypożyczalniaSamochodówPremium.Models.Wydarzenie
@using WypożyczalniaSamochodówPremium.Helpers
@{
    ViewBag.Title = "Wydarzenie";
    Layout = "~/Areas/Adm/Views/Shared/_LayoutScript.cshtml";
}


<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-male"></i> Edytuj Wydarzenie
                </div>
                @{Html.EnableClientValidation();}
                @using (Html.BeginForm("Edit", "Osoba", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <div class="form-horizontal">
                            <h4>Wydarzenie</h4>
                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group row">
                                @Html.LabelFor(model => model.NazwaWydarzenia, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.NazwaWydarzenia, new { @class = "form-control" })

                                    @Html.ValidationMessageFor(model => model.NazwaWydarzenia)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextAreaFor(model => model.Opis, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Opis)
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Zapisz" class="btn btn-primary" /> &nbsp; @Html.ActionLink("Wróć do listy", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

