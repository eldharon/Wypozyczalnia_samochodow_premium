@model IEnumerable<WypożyczalniaSamochodówPremium.Models.Samochod>
@using WypożyczalniaSamochodówPremium.Helpers;
@{
    ViewBag.Title = "Samochody";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}


@if (TempData["okMessage"] != null)
{
    Html.RenderPartial("MessageOKControl");
}

@if (TempData["warningMessage"] != null)
{
    Html.RenderPartial("MessageWarningControl");
}

@if (TempData["errorMessage"] != null)
{
    Html.RenderPartial("MessageErrorControl");
}



<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-align-justify"></i> Samochody
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-responsive-sm">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.Marka)*@
                                        Marka
                                    </th>
                                    <th>
                                        Model
                                    </th>
                                    <th>
                                        Wersja
                                    </th>
                                    <th>
                                        Rok produkcji
                                    </th>
                                    <th>
                                        Rodzaj silnika
                                    </th>
                                    <th>
                                        Pojemność silnika
                                    </th>
                                    <th>
                                        Skrzynia biegów
                                    </th>
                                    <th>
                                        Liczba drzwi
                                    </th>
                                    <th>
                                        Kolor
                                    </th>
                                    <th>
                                        Przebieg
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Akcja
                                        </button>
                                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 35px, 0px); top: 0px; left: 0px; will-change: transform;">
                                            @Html.IconActionLink("fa fa-edit", "Edytuj", "Edit", "Samochod", new { id = item.SamochodId }, new { @class = "dropdown-item" })
                                            @Html.IconActionLink("fa fa-list-ol", "Szczegóły", "Details", "Samochod", new { id = item.SamochodId }, new { @class = "dropdown-item" })
                                        </div>


                                    </div>
                                </td>
                                <td>
                                    @item.Marka
                                </td>
                                <td>
                                    @item.Model
                                </td>
                                <td>
                                    @item.Wersja
                                </td>
                                <td>
                                    @item.RokProdukcji
                                </td>
                                <td>
                                    @item.PojemnoscSilnika
                                </td>
                                <td>
                                    @item.SkrzyniaBiegow
                                </td>
                                <td>
                                    @item.LiczbaDrzwi
                                </td>
                                <td>
                                    @item.Kolor
                                </td>
                                <td>
                                    @item.Przebieg
                                </td>

                            </tr>

                            }
                        </table>


                    </div>
                    <div class="card-footer">
                        @Html.IconActionLink("fa fa-plus-circle ", "Nowy samochód", "Create", "Samochod", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>