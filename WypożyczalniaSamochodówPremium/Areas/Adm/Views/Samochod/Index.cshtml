@model IEnumerable<WypożyczalniaSamochodówPremium.Models.Samochod>
@using WypożyczalniaSamochodówPremium.Helpers;
@{
    ViewBag.Title = "Samochody";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}


@if (TempData["okMessage"] != null)
{
    Html.RenderPartial("MessageOKControl");
}

@if (TempData["warningMessage"] != null)
{
    Html.RenderPartial("MessageWarningControl");
}

@if (TempData["errorMessage"] != null)
{
    Html.RenderPartial("MessageErrorControl");
}



<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-car"></i> Samochody
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-responsive-sm">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Marka)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Model)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Wersja)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RokProdukcji)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.RodzajSilnika)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.PojemnoscSilnika)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SkrzyniaBiegow)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.LiczbaDrzwi)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Kolor)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Przebieg)
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Akcja
                                        </button>
                                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 35px, 0px); top: 0px; left: 0px; will-change: transform;">
                                            @Html.IconActionLink("fa fa-edit", "Edytuj", "Edit", "Samochod", new { id = item.SamochodId }, new { @class = "dropdown-item" })
                                            @Html.IconActionLink("fa fa-list-ol", "Szczegóły", "Details", "Samochod", new { samId = item.SamochodId }, new { @class = "dropdown-item" })
                                            @Html.IconActionLink("fa fa-trash", "Usuń", "Delete", "Samochod", new { id = item.SamochodId }, new { @class = "dropdown-item" })
                                        </div>


                                    </div>
                                </td>
                                <td>
                                    @item.Marka
                                </td>
                                <td>
                                    @item.Model
                                </td>
                                <td>
                                    @item.Wersja
                                </td>
                                <td>
                                    @item.RokProdukcji.Year
                                </td>
                                <td>
                                    @item.RodzajSilnika
                                </td>
                                <td>
                                    @item.PojemnoscSilnika
                                </td>
                                <td>
                                    @item.SkrzyniaBiegow
                                </td>
                                <td>
                                    @item.LiczbaDrzwi
                                </td>
                                <td>
                                    @item.Kolor
                                </td>
                                <td>
                                    @item.Przebieg
                                </td>

                            </tr>

                            }
                        </table>


                    </div>
                    <div class="card-footer">
                        @using (Html.BeginForm("PopulateAutaBaza", "Samochod", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <input type="file" name="file" id="file" class="btn btn-secondary float-right" />
                            <input type="submit" value="Upload" class="btn btn-primary float-right" />
                            @ViewBag.Message
                            @Html.IconActionLink("fa fa-plus-circle ", "Nowy samochód", "Create", "Samochod", null, new { @class = "btn btn-primary" })
                            @*@Html.IconActionLink("fa fa-download ", "Załaduj JSON", "PopulateAutaBaza", "Samochod", null, new { @class = "btn btn-default float-right" })*@
                        }
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>