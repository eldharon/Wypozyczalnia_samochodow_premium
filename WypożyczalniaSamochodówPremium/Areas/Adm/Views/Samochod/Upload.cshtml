@model WypożyczalniaSamochodówPremium.Models.PhotoProp
@using WypożyczalniaSamochodówPremium.Helpers

@using (Ajax.BeginForm("Upload", "Samochod",
new
{

    Name = ViewBag.Name,
    AlternateText = ViewBag.AlternateText,
    id = ViewBag.SamochodId
},
new AjaxOptions
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "",
    LoadingElementId = "autaBazaLoading",
    OnComplete = "",
    OnBegin = "HideModal",
    OnFailure = "",
    OnSuccess = ""
}, 
new { enctype = "multipart/form-data" }))
{

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" onclick="HideModal()"><span aria-hidden="true"><i class="fa fa-times"></i></span><span class="sr-only">Close</span></button>
    </div>
    <div class="modal-body">

        <div class="form-horizontal">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, string.Empty, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.AlternateText, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AlternateText, string.Empty, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AlternateText, "", new { @class = "text-danger" })
                </div>
            </div>
            @{
                ViewBag.Name = Model.Name;
                ViewBag.AlternateText = Model.AlternateText;
            }
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-white" data-dismiss="modal" onclick="HideModal()">Anuluj</button>
        <span>
            <input type="file" id="OriginalLocation" name="OriginalLocation" />
        </span>
        <button type="submit" class="btn btn-primary btn-danger">Dodaj</button>
    </div>
}
