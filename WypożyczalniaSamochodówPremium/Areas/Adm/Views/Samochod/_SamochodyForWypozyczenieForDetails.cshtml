@using WypożyczalniaSamochodówPremium.Models
@model WypożyczalniaSamochodówPremium.Models.WypSam

<div id="SamTarget">
    @if (Model.WypSamList.Count() > 0)
    {

        <h3>
            Samochody:
        </h3>
        <hr />
        <div class="row form-group line">
            <div class="col-md-2">
                <b>Marka</b>
            </div>
            <div class="col-md-10">
                <b>Model</b>
            </div>
        </div>
        var count = 1;

        foreach (var item in Model.WypSamList)
        {
            <div class="row form-group line">
                <div class="col-md-2">
                    @count. @item.Samochod.Marka
                </div>
                <div class="col-md-2">
                    @item.Samochod.Model
                </div>
            </div>
            count++;
        }
        <hr />
    }
    else
    {
        <div>
            Brak samochodów...
        </div>
    }
</div>
