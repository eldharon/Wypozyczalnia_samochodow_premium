@model IEnumerable<WypożyczalniaSamochodówPremium.Models.PhotoProp>
@using WypożyczalniaSamochodówPremium.Helpers;
<div id="OpisTarget">
    @if (Model.Count() > 0)
    {
        <h3>
            Zdjęcia
        </h3>
        <hr />
        <div class="row" >
            @foreach (var item in Model )
            {
                <div class="col-md-2" align="center">
                    <div>
                        <b style="margin-bottom: 10px">@item.Name</b>
                    </div>
                    <div>
                        <a target="_blank" href="/Adm/Samochod/Details/@item.ReferencedObjectId">
                            <img src="/Adm/Samochod/ShowPhoto/@item.id" alt="@item.AlternateText" />
                        </a>
                    </div>
                    <div>
                        <a data-toggle="modal" data-remote="@Url.Action("DeleteZdjecie", "Samochod", new { id = item.id, ObjId = item.ReferencedObjectId }, null)" href="#" data-target="#modal"><i class="fa fa-trash" style = "margin-top: 10px"></i> Usuń</a>
                    </div>
                </div>
            }

        </div>
        <hr />
    }
    else
    {
        <div>
            Brak zdjęć...
        </div>
        <hr />
    }
</div>

