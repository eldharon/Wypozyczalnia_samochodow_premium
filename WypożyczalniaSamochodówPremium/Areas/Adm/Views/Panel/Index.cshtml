@using WypożyczalniaSamochodówPremium.Helpers;

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header"><h2>Witamy w panelu administracyjnym!</h2></div>

                <div class="card-body">
                    <div class="form-horizontal">

                        @if (ViewBag.displayMenu == "Yes")
                        {
                            <div class="form-group row">
                                <div class="control-label col-md-2 font-weight-bold">
                                    Zarejestruj pracownika
                                </div>
                                <div class="col-md-10">
                                    @Html.IconActionLink("fa fa-plus-edit", "Dodaj", "RegisterADM", "Account", new { area = "" }, new { @class = "btn btn-primary" })

                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="control-label col-md-2 font-weight-bold">
                                    Zmień rolę użytkownika
                                </div>
                                <div class="col-md-10">
                                    @Html.IconActionLink("fa fa-plus-edit","Lista", "UserList", "Account", new { area = "" }, new { @class = "btn btn-primary" })
                                </div>
                            </div>
                        }
                        else
                        {
                            <h5>  Witaj <strong>@ViewBag.Name</strong>!</h5>
                        }


                    </div>
                </div>
                <div class="card-footer"></div>
            </div>
        </div>
    </div>
</div>
