@model WypożyczalniaSamochodówPremium.Models.Pracownik
@using WypożyczalniaSamochodówPremium.Helpers
@{
    ViewBag.Title = "Pracownicy";
    Layout = "~/Areas/Adm/Views/Shared/_LayoutScript.cshtml";
}


<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-briefcase"></i> Dodaj pracownika
                </div>
                @{Html.EnableClientValidation();}
                @using (Html.BeginForm("Create", "Pracownik", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <div class="form-horizontal">
                            <h4>Pracownik</h4>
                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group row">
                                @Html.LabelFor(model => model.DataZatrudnienia, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.DataZatrudnienia, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DataZatrudnienia)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Pensja, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Pensja, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Pensja)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Premia, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Premia, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Premia)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Stanowisko, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(x => Model.Stanowisko, (IEnumerable<SelectListItem>)ViewData["stanowiskoList"], string.Empty, htmlAttributes: new { @class = "form-control", @id = "stanowiskoId" })
                                    @Html.ValidationMessageFor(x => x.Stanowisko, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.OsobaId, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(x => Model.OsobaId, (IEnumerable<SelectListItem>)ViewData["osobaList"], string.Empty, htmlAttributes: new { @class = "form-control", @id = "osobaId" })
                                    @Html.ValidationMessageFor(x => x.OsobaId, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Dodaj" class="btn btn-primary" /> &nbsp; @Html.ActionLink("Wróć do listy", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>
