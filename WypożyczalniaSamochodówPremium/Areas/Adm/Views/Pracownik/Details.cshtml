@model WypożyczalniaSamochodówPremium.Models.Pracownik
@using WypożyczalniaSamochodówPremium.Helpers;
@{
    ViewBag.Title = "Samochody";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}


@if (TempData["okMessage"] != null)
{
    Html.RenderPartial("MessageOKControl");
}

@if (TempData["warningMessage"] != null)
{
    Html.RenderPartial("MessageWarningControl");
}

@if (TempData["errorMessage"] != null)
{
    Html.RenderPartial("MessageErrorControl");
}

<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                        <i class="fa fa-male"></i> Szczegóły
                    </div>
                    <div class="card-body">
                        <div class="form-horizontal">
                            <h4>Pracownik</h4>
                            <hr>
                            <hr />
                            <div class="row form-group line">
                                @Html.LabelFor(model => model.DataZatrudnienia, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.DataZatrudnienia)
                                </div>
                            </div>

                            <div class="row form-group line">
                                @Html.LabelFor(model => model.DataZwolnienia, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.DataZwolnienia)
                                </div>
                            </div>

                            <div class="row form-group line">
                                @Html.LabelFor(model => model.Pensja, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Pensja)
                                </div>
                            </div>

                            <div class="row form-group line">
                                @Html.LabelFor(model => model.Premia, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Premia)
                                </div>
                            </div>

                            <div class="row form-group line">
                                @Html.LabelFor(model => model.Stanowisko, htmlAttributes: new { @class = "control-label col-md-2 font-weight-bold" })
                                <div class="col-md-10">
                                    @Html.DisplayFor(model => model.Stanowisko)
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        @Html.ActionLink("Wróć do listy", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>