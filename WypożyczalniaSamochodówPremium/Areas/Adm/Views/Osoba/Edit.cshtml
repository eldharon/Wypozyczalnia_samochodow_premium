@model WypożyczalniaSamochodówPremium.Models.Osoba
@using WypożyczalniaSamochodówPremium.Helpers
@{
    ViewBag.Title = "Osoba";
    Layout = "~/Areas/Adm/Views/Shared/_LayoutScript.cshtml";
}


<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-male"></i> Edytuj Osobę
                </div>
                @{Html.EnableClientValidation();}
                @using (Html.BeginForm("Edit", "Osoba", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <div class="form-horizontal">
                            <h4>Osoba</h4>
                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group row">
                                @Html.LabelFor(model => model.Imie, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Imie, new { @class = "form-control" })

                                    @Html.ValidationMessageFor(model => model.Imie)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Nazwisko, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Nazwisko, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Nazwisko)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.DataUrodzenia, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.DataUrodzenia, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.DataUrodzenia)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Adres, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Adres, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Adres)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.KodPocztowy, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.KodPocztowy, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.KodPocztowy)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Kraj, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Kraj, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Kraj)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Miasto, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.Miasto, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Miasto)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.NrTelefonu, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.TextBoxFor(model => model.NrTelefonu, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.NrTelefonu)
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Zapisz" class="btn btn-primary" /> &nbsp; @Html.ActionLink("Wróć do listy", "Index", null, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

