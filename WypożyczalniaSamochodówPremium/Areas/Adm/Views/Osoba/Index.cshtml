@model IEnumerable<WypożyczalniaSamochodówPremium.Models.Osoba>
@using WypożyczalniaSamochodówPremium.Helpers;
@{
    ViewBag.Title = "Samochody";
    Layout = "~/Areas/Adm/Views/Shared/_Layout.cshtml";
}


@if (TempData["okMessage"] != null)
{
    Html.RenderPartial("MessageOKControl");
}

@if (TempData["warningMessage"] != null)
{
    Html.RenderPartial("MessageWarningControl");
}

@if (TempData["errorMessage"] != null)
{
    Html.RenderPartial("MessageErrorControl");
}



<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header">
                           <i class="fa fa-male"></i> Osoby 
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-responsive-sm">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Imie)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Nazwisko)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DataUrodzenia)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Adres)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.KodPocztowy)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Kraj)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.NrTelefonu)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Miasto)
                                    </th>
                                </tr>
                            </thead>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-secondary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Akcja
                                        </button>
                                        <div class="dropdown-menu" x-placement="bottom-start" style="position: absolute; transform: translate3d(0px, 35px, 0px); top: 0px; left: 0px; will-change: transform;">
                                            @Html.IconActionLink("fa fa-edit", "Edytuj", "Edit", "Osoba", new { id = item.OsobaId }, new { @class = "dropdown-item" })
                                            @Html.IconActionLink("fa fa-list-ol", "Szczegóły", "Details", "Osoba", new { id = item.OsobaId }, new { @class = "dropdown-item" })
                                            @*@Html.IconActionLink("fa fa-trash", "Usuń", "Delete", "Osoba", new { id = item.OsobaId }, new { @class = "dropdown-item" })*@
                                        </div>


                                    </div>
                                </td>
                                <td>
                                    @item.Imie
                                </td>
                                <td>
                                    @item.Nazwisko
                                </td>
                                <td>
                                    @item.DataUrodzenia
                                </td>
                                <td>
                                    @item.Adres
                                </td>
                                <td>
                                    @item.KodPocztowy
                                </td>
                                <td>
                                    @item.Kraj
                                </td>
                                <td>
                                    @item.NrTelefonu
                                </td>
                                <td>
                                    @item.Miasto
                                </td>

                            </tr>

                            }
                        </table>


                    </div>
                    <div class="card-footer">
                        @*@Html.IconActionLink("fa fa-plus-circle ", "Nowa Osoba", "Create", "Osoba", null, new { @class = "btn btn-primary" })*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

