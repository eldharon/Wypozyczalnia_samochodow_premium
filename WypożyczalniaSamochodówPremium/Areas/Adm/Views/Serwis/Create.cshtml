@model WypożyczalniaSamochodówPremium.Models.Serwis
@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-tools"></i> Dodaj Serwis
                </div>
                @{Html.EnableClientValidation();}
                @using (Html.BeginForm())
                {
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <h4>Osoba</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row form-group line">
                            @Html.LabelFor(model => model.DataOddania, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DataOddania, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.DataOddania)
                            </div>
                        </div>

                        <div class="row form-group line">
                            @Html.LabelFor(model => model.DataOdbioru, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DataOdbioru, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.DataOdbioru)
                            </div>
                        </div>

                        <div class="row form-group line">
                            @Html.LabelFor(model => model.Koszt, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Koszt, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.Koszt)
                            </div>
                        </div>

                        <div class="row form-group line">
                            @Html.LabelFor(model => model.Uwagi, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Uwagi, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.Uwagi)
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.SamochodId)
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Dodaj" class="btn btn-primary" /> &nbsp; @Html.ActionLink("Wróć do listy", "ShowSerwisyForSamochod", new { id = Model.SamochodId}, new { @class = "btn btn-secondary" })
                    </div>

                }

            </div>
        </div>
    </div>
</div>