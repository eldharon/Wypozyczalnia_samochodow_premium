@model WypożyczalniaSamochodówPremium.Models.Cennik
@{
    ViewBag.Title = "Create";
}

<div class="container-fluid">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-tools"></i> Dodaj Cennik
                </div>
                @{Html.EnableClientValidation();}
                @using (Html.BeginForm())
                {
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <h4>Cennik</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row form-group line">
                            @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.DropDownListFor(x => Model.Opis, (IEnumerable<SelectListItem>)ViewData["opisList"], string.Empty, htmlAttributes: new { @class = "form-control", @id = "opisId" })

                                @Html.ValidationMessageFor(model => model.Opis)
                            </div>
                        </div>

                        <div class="row form-group line">
                            @Html.LabelFor(model => model.Cena, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Cena, new { @class = "form-control" })

                                @Html.ValidationMessageFor(model => model.Cena)
                            </div>
                        </div>

                        @Html.HiddenFor(model => model.SamochodId)
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Dodaj" class="btn btn-primary" /> &nbsp; @Html.ActionLink("Wróć do listy", "ShowCennikiForSamochod", new { id = Model.SamochodId }, new { @class = "btn btn-secondary" })
                    </div>

                }

            </div>
        </div>
    </div>
</div>