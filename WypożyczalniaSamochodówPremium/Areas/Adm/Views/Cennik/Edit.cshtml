@model WypożyczalniaSamochodówPremium.Models.Cennik
@using WypożyczalniaSamochodówPremium.Helpers
@{
    ViewBag.Title = "Osoba";
    Layout = "~/Areas/Adm/Views/Shared/_LayoutScript.cshtml";
}


<div class="container-fluid mt-5">
    <div class="animated fadeIn">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-male"></i> Edytuj Cennik
                </div>
                @{Html.EnableClientValidation();}
                @using (Html.BeginForm("Edit", "Cennik", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="card-body">
                        @Html.ValidationSummary(true)
                        <div class="form-horizontal">
                            <h4>Ubezpieczenie</h4>
                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group row">
                                @Html.LabelFor(model => model.Opis, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.DropDownListFor(x => Model.Opis, (IEnumerable<SelectListItem>)ViewData["opisList"], string.Empty, htmlAttributes: new { @class = "form-control", @id = "opisId" })
                                    @Html.ValidationMessageFor(model => model.Opis)
                                </div>
                            </div>

                            <div class="form-group row">
                                @Html.LabelFor(model => model.Cena, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-6">
                                    @Html.EditorFor(model => model.Cena, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Cena)
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <input type="submit" value="Zapisz" class="btn btn-primary" /> &nbsp; @Html.ActionLink("Wróć do listy", "ShowCennikiForSamochod", "Cennik", new { id = Model.SamochodId }, new { @class = "btn btn-secondary" })
                    </div>
                }
            </div>
        </div>
    </div>
</div>

